    :javascript
      function openStreakModalVideo(_video) {
        console.log("open modal")
        //document.getElementById('streak_video_modal').style.display = "block"
        document.getElementById('streak_video_modal').style.display = "block"
        document.getElementById('streakModalVideo').src = _video
      }

      document.getElementById('streak_video_modal').style.display = "none"

      document.getElementById('streak_video_modal').onclick = function() {
        document.getElementById('streak_video_modal').style.display = "none"
      }

      document.body.appendChild(document.getElementById('streak_video_modal'))

