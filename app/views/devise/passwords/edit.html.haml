#login_form
  .form_container
    = image_tag "logo_medium"
    %br
    %br
    %h2 Verander uw wachtwoord
    = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
      = render "devise/shared/error_messages", resource: resource
      = f.hidden_field :reset_password_token
      .field
        = f.label :password, "Nieuwe wachtwoord"
        %br/
        - if @minimum_password_length
          %em
            (minimaal #{@minimum_password_length} karakters)
          %br/
        = f.password_field :password, autofocus: true, autocomplete: "new-password"
      .field
        = f.label :password_confirmation, "Bevestig nieuw wachtwoord"
        %br/
        = f.password_field :password_confirmation, autocomplete: "new-password"
      .actions
        = f.submit "Verander mijn wachtwoord"
    /= render "devise/shared/links"
